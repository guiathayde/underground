{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "g++.exe build active file",
      "command": "C:\\MinGW\\bin\\g++.exe",
      "args": [
        "-g",
        "${fileDirname}/**.cpp",
        "-I",
        "SFML/include",
        "-L",
        "SFML/lib",
        "-lsfml-graphics",
        "-lsfml-audio",
        "-lsfml-window",
        "-lsfml-system",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Tarefa gerada pelo Depurador."
    },
    {
      "type": "shell",
      "label": "C Program Running",
      "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "detail": "Tarefa executada pela Task."
    }
  ],
  "version": "2.0.0"
}
